{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "Node16",
    "moduleResolution": "node",
    "outDir": "dist/",
    "baseUrl": "src/",
    "paths": {
      "@controllers/*": ["./controllers/*"],
      "@db/*": ["./db/*"],
      "@middleware/*": ["./middleware/*"],
      "@routes/*": ["./routes/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/*.ts"]
}
